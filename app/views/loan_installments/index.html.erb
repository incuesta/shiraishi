<p id="notice"><%= notice %></p>

<h1>Loan Installments</h1>

<table>
  <thead>
    <tr>
      <th>Month number</th>
      <th>Client</th>
      <th>From</th>
      <th>To</th>
      <th>Principal amount</th>
      <th>Interest amount</th>
      <th>Emi installment</th>
      <th>State</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loan_installments.order("installment_no ASC").each do |loan_installment| %>
      <tr>
        <td><%= loan_installment.installment_no %></td>
        <td><%= loan_installment.client %></td>
        <td><%= loan_installment.from.to_date %></td>
        <td><%= loan_installment.to.to_date %></td>
        <td><%= number_to_currency(loan_installment.principal_amount, unit: "Php ") %></td>
        <td><%= number_to_currency(loan_installment.interest_amount, unit: "Php ") %></td>
        <td><%= number_to_currency(loan_installment.emi_installment, unit: "Php ") %></td>
        <td><%= loan_installment.state %></td>
        <td><%= loan_installment.notes %></td>
        <td><%= link_to 'Show', loan_installment %></td>
        <td><%= link_to 'Edit', edit_loan_installment_path(loan_installment) %></td>
        <td><%= link_to 'Destroy', loan_installment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

