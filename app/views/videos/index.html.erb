

<div class="row">
    <div class="col-md-10 col-centered">   
        <!-- Panel Table -->
        <div class="panel panel-default">

          <div class="panel-heading panel-heading-custom">
            <div class="panel_title_to_the_left">
              Videos
            </div>

            <div class="panel_buttons_to_the_right">
                <%= link_to 'Add Videos', new_video_path, class: 'btn btn-sm btn-success' %>
            </div>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Video ID</th>
                      <th>Host</th>
                      <th>Title</th>
                      <th>Description</th>
                      <th>Position</th>
                      <th>Tags</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @videos.each do |video| %>
                      <tr>
                        <td><%= video.video_id %></td>
                        <td><%= video.host %></td>
                        <td><%= video.title %></td>
                        <td><%= truncate(video.description, length: 50) { link_to '(click for more)', video } %></td>
                        <td><%= video.position %></td>
                        <td><%= video.tags %></td>
                        <td><%= link_to 'Show', video %></td>
                        <td><%= link_to 'Edit', edit_video_path(video) %></td>
                        <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } if system_user? %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
            <!-- End table responsive -->

          </div>
          <!-- End Panel Body -->

        </div>
        <!-- Table Panel End -->

    </div>
    <!-- End of col-md-8 -->
</div>
<!-- Row End -->