<%= form_with(model: video, local: true) do |form| %>
  <% if video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :video_id, 'Video ID' %>
    <%= form.text_field :video_id, id: :video_video_id, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :host %>
    <%= form.text_field :host, id: :video_host, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :video_title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :video_description, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :position %>
    <%= form.select :position, 1..@video_count, {}, id: :video_position, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :tags %>
    <%= form.text_field :tags, id: :video_tags, class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit (('Add Video' if action_name == 'new') || 'Change'), class: 'btn btn-lg btn-success' %>
  </div>
<% end %>
