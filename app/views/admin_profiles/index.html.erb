<!-- Panel Table -->
<div class="panel panel-default">

  <div class="panel-heading panel-heading-custom">Admin Profiles</div>

  <div class="table-responsive">

      <table class="table table-striped">
        <thead>
          <tr>
            <th>User name</th>
            <th>Image</th>
            <th>Email</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Mobile</th>

            <!-- For the Action -->
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @admin_profiles.each do |admin_profile| %>
              <% admin = admin_profile.admin %>
              <tr>
                <td><%= admin.user_name %></td>
                <td>
                  <% if admin_profile.image.present? %>
                    <%= image_tag admin_profile.image.img_32.url, alt: "#{admin.user_name}.jpg" %>
                  <% else %>
                    <%= image_tag 'user_icon_1_32.png', alt: "#{admin.user_name}.jpg" %>
                  <% end %>

                </td>
                <td><%= admin.email %></td>
                <td><%= admin.last_name %></td>
                <td><%= admin.first_name %></td>
                <td><%= admin_profile.mobile %></td>
               
                <td><%= link_to 'Show', admin_profile %></td>
                <td><%= link_to 'Edit', edit_admin_profile_path(admin_profile) %></td>
                
                <% if system_user? %>
                  <td><%= link_to 'Destroy', admin_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
          <% end %>
        </tbody>
      </table>
      
  </div>
  <!-- table-responsive End -->
</div>
<!-- Table Panel End -->

