                      </tr>

                      <tr>
                        <td><strong>First name:</strong></td>
                        <td><%= admin.first_name %></td>
                      </tr>

                      <tr>
                        <td><strong>Middle name:</strong></td>
                        <td><%= admin.first_name %></td>
                      </tr>

                      <tr>
                        <td><strong>Email:</strong></td>
                        <td><%= admin.email %></td>
                      </tr>

                      <tr>
                        <td><strong>Sex:</strong></td>
                        <td><%= @admin_profile.sex %></td>
                      </tr>

                      <tr>
                        <td><strong>Birth date:</strong></td>
                        <td><%= @admin_profile.birth_date %></td>
                      </tr>

                      <tr>
                        <td><strong>Address:</strong></td>
                        <td><%= @admin_profile.address %></td>
                      </tr>

                      <tr>
                        <td><strong>City:</strong></td>
                        <td><%= @admin_profile.city %></td>
                      </tr>

                      <tr>
                        <td><strong>Zip code:</strong></td>
                        <td><%= @admin_profile.zip_code %></td>
                      </tr>

                      <tr>
                        <td><strong>Civil status:</strong></td>
                        <td><%= @admin_profile.civil_status %></td>
                      </tr>

                      <tr>
                        <td><strong>Mobile:</strong></td>
                        <td><%= @admin_profile.mobile %></td>
                      </tr>

                      <tr>
                        <td><strong>Company:</strong></td>
                        <td><%= @admin_profile.company %></td>
                      </tr>

                      <tr>
