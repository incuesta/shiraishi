<% admin = @admin_profile.admin %>

<!-- Div Row -->
<div class="row">
    <div class="col-md-10 col-md-offset-1">
      
      <div class="panel panel-default">

          <div class="panel-heading">
              <div class="panel-title">
                  <strong><%= admin.user_name.capitalize %></strong>
                  
                  <div class="pull-right">
                    <%= link_to 'Update Profile', edit_admin_profile_path(@admin_profile) %> |
                    <%= link_to 'Update Registration', edit_admin_registration_path(admin) %> |
                    <%= link_to 'Back', admin_profiles_path %>
                  </div>
              </div>
          </div>


              <div class="row">

                <!-- Image Div -->
                <div class="col-md-6">
                    <div class="row" style="margin: 25px;">
                        <div class="col-md-12">
                            <div>
                                <%= image_tag "user_icon_1.png", alt: admin.user_name.upcase, class: "center-block", size:"200x200" %>
                            
                                  <p class="text-center h3"><%= admin.full_name %></p>
                                  <p class="text-center h5"><%= admin.email %></p>
                              
                            </div>
