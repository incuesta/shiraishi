                      </tr>

                      <tr>
                        <td><strong>Employee category:</strong></td>
                        <td><%= @admin_profile.employee_category %></td>
                      </tr>

                      <tr>
                        <td><strong>Job title:</strong></td>
                        <td><%= @admin_profile.job_title %></td>
                      </tr>

                      <tr>
                        <td><strong>Manager:</strong></td>
                        <td><%= @admin_profile.manager %></td>
                      </tr>

                      
                  </table>
                  <!-- Table End -->

                </div>
                <!-- div col md 6 end -->
              </div>
      </div>
      <!-- Panel Default End -->

    </div>
    <!-- End of col-md-offset-2 -->
</div>
