<!-- Row Start -->
<div class="row">
    <div class="col-md-10 col-md-offset-1">
      
      <div class="panel panel-default">

          <div class="panel-heading panel-heading-custom">

            <div class="row">
              <div class="col-md-12">
                  <div class="panel_title_to_the_left">
                      Guarantor
                  </div>
                      
                  <div class="panel_buttons_to_the_right">
                    <%= link_to 'Update Guarantor', edit_guarantor_path(@guarantor), class: 'btn btn-sm btn-success' %> |
                    <%= link_to 'Sponsored Client', @guarantor.client.client_profile, class: 'btn btn-sm btn-success' %>
                  </div>
              </div>
            </div>
            <!-- Row End -->
          </div>


              <div class="row">

                <!-- Image Div -->
                <div class="col-md-6">
                    <div class="row" style="margin: 25px;">
                        <div class="col-md-12">
                            <div>
                                <!-- Show this if no profile Image -->
                                <%= image_tag "user_icon_1.png", alt: "#{@guarantor.last_name}.jpg", class: "center-block", size:"200x200" unless @guarantor.image.present? %>

                                <!-- Show this if there's a profile Image -->
                                <%= image_tag @guarantor.image.img_200.url, alt: "#{@guarantor.last_name}.jpg", class: "center-block" if @guarantor.image.present? %>
                            
                                  <p class="text-center h3"><%= @guarantor.full_name %></p>
                              
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Image Div End -->


                <div class="col-md-6">

                  <table class="table">
                      <tr>
                        <td><strong>Last name:</strong></td>
                        <td><%= @guarantor.last_name %></td>
                      </tr>

                      <tr>
                        <td><strong>First name:</strong></td>
                        <td><%= @guarantor.first_name %></td>
                      </tr>

                      <tr>
                        <td><strong>Middle name:</strong></td>
                        <td><%= @guarantor.first_name %></td>
                      </tr>


                      <tr>
                        <td><strong>Sex:</strong></td>
                        <td><%= @guarantor.sex %></td>
                      </tr>

                      <tr>
                        <td><strong>Birth date:</strong></td>
                        <td><%= @guarantor.birth_date %></td>
                      </tr>

                      <tr>
                        <td><strong>Address:</strong></td>
                        <td><%= @guarantor.address %></td>
                      </tr>

                      <tr>
                        <td><strong>City:</strong></td>
                        <td><%= @guarantor.city %></td>
                      </tr>

                      <tr>
                        <td><strong>Zip code:</strong></td>
                        <td><%= @guarantor.zip_code %></td>
                      </tr>

                      <tr>
                        <td><strong>Civil status:</strong></td>
                        <td><%= @guarantor.civil_status %></td>
                      </tr>

                      <tr>
                        <td><strong>Mobile:</strong></td>
                        <td><%= @guarantor.mobile %></td>
                      </tr>


                      <tr>
                        <td><strong>Company:</strong></td>
                        <td><%= @guarantor.company %></td>
                      </tr>


                      <tr>
                        <td><strong>Job title:</strong></td>
                        <td><%= @guarantor.job_title %></td>
                      </tr>

                      
                  </table>
                  <!-- Table End -->

                </div>
                <!-- div col md 6 end -->
              </div>
      </div>
      <!-- Panel Default End -->

    </div>
    <!-- End of col-md-offset-2 -->
</div>
<!-- Div Row End