<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>String</th>
      <th>Application date</th>
      <th>Approved date</th>
      <th>Disbursement date</th>
      <th>Status</th>
      <th>Principal amount</th>
      <th>From</th>
      <th>To</th>
      <th>Principal amount</th>
      <th>Net loan</th>
      <th>Net interest</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.string_id %></td>
        <td><%= loan.application_date %></td>
        <td><%= loan.approved_date %></td>
        <td><%= loan.disbursement_date %></td>
        <td><%= loan.status %></td>
        <td><%= loan.principal_amount %></td>
        <td><%= loan.from %></td>
        <td><%= loan.to %></td>
        <td><%= loan.principal_amount %></td>
        <td><%= loan.net_loan %></td>
        <td><%= loan.net_interest %></td>
        <td><%= loan.notes %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

