
<div class="row">

	<div class="col-md-6 col-centered">

		<div class="panel panel-default">
			<div class="panel-heading panel-heading-custom">
				<div class="row">
					<div class="col-md-12">
						<div class="panel_title_to_the_left" >Apply for a Loan</div>

						<div class="panel_buttons_to_the_right">

							<% if current_client %>
								<%= link_to 'Available Services', services_financing_index_path, class: "btn btn-sm btn-info" %>
								
							<% end %>

							<% if current_admin || current_accountant || current_loan_manager %>
								<%= link_to 'Back', loans_path, class: "btn btn-sm btn-info" %>
							<% end %>
						</div>
					</div>
				</div>
				
			</div>

				<div class="row">
					<div class="col-md-10 col-centered">

						<%= render 'form', loan: @loan %>					
					</div>
				</div>
		</div>
		<!-- End Panel Heading -->
		

	</div>

</div>